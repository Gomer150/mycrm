{% extends "deals/base.html" %}
{% block content %}
<h2>{{ deal.title }}</h2>
<p>Этап: {{ deal.stage }}</p>
<p>Владелец: {{ deal.owner.username }}</p>

<h4>Документы</h4>
<ul>
  {% for doc in deal.documents.all %}
  <li>{{ doc.filename }} — <a href="{% url 'download_document' doc.pk %}">скачать</a></li>
  {% empty %}<li>Нет документов</li>{% endfor %}
</ul>

<a class="btn btn-primary" href="{% url 'upload_document' deal.pk %}">Загрузить документ</a>



<h4 class="mt-4">Параметры воронки</h4>
<ul>
 {% for s in stages %}
  <li>{{ s.order_index }} — {{ s.name }}</li>
  {% endfor %}
 </ul>

{% endblock %}